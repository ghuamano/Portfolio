---
import LanguageSelector from "./LanguageSelector.astro";
import { getContent } from "../utils/translations";
// Obtenemos el idioma actual usando la funci√≥n nativa de Astro
const currentLocale = Astro.currentLocale || "es";
const content = getContent(currentLocale);
---

<header
    class="container flex justify-center align-center py-5 w-full mx-auto mb-44"
>
    <nav class="flex gap-x-10 list-none opacity-90">
        <ul class="flex gap-x-10">
            <li><a href="">{content.nav.home}</a></li>
            <li><a href="">{content.nav.about}</a></li>
            <li><a href="">{content.nav.projects}</a></li>
            <li><a href="">{content.nav.contact}</a></li>
        </ul>

        
    </nav>

    <LanguageSelector />
</header>
