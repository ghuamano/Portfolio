---
// Importamos la utilidad para traducciones
import { getContent } from "../utils/translations";

// Obtenemos el idioma actual usando la función nativa de Astro
const currentLocale = Astro.currentLocale || "es";
const content = getContent(currentLocale);
// Obtenemos el año actual
const currentYear = new Date().getFullYear();

import GitHub from "./Icons/GitHub.astro";
import JavaScript from "./Icons/JavaScript.astro";
import LiveWire from "./Icons/LiveWire.astro";
import Laravel from "./Icons/Laravel.astro";
import PHP from "./Icons/PHP.astro";
import MySql from "./Icons/MySql.astro";
import HTML from "./Icons/HTML.astro";
import CSS from "./Icons/CSS.astro";
import Astr from "./Icons/Astr.astro";
import Bootstrap from "./Icons/Bootstrap.astro";
import Tailwind from "./Icons/Tailwind.astro";
import LinkButton from "./LinkButton.astro";

import Link from "./Icons/Link.astro";

const TAGS = {
    LARAVEL: {
        name: "Laravel",
        class: "bg-black text-white",
        icon: Laravel,
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-[#003159] text-white",
        icon: Tailwind,
    },
    BOOTSTRAP: {
        name: "Bootstrap",
        class: "bg-[#563d7c] text-white",
        
        icon: Bootstrap,
    },
    ASTRO:{
        name: "Astro",
        class: "bg-[#FF5C00]/60 text-white",
        icon: Astr,
    }


};

const PROJECTS = [
    {
        title: content.projects.project1.title,
        description: content.projects.project1.description,
        link: "https://astro.build",
        github: "",
        image: "/images/presto_it.webp",
        tags: [TAGS.LARAVEL, TAGS.BOOTSTRAP],
    },
    {
        title: content.projects.project2.title,
        description: content.projects.project2.description,
        link: "https://reactjs.org",
        github: "",
        image: "/images/portfolio.webp",
        tags: [TAGS.ASTRO, TAGS.TAILWIND],
    },
    // {
    //     title: "Vue",
    //     description: "The Progressive JavaScript Framework.",
    //     link: "https://vuejs.org",
    //     github: "",
    //     image: "/images/vue.png",
    //     tag: ["HTML", "CSS", "JavaScript"]
    // },
];
---

<div class="flex flex-col gap-y-16">
    {
        PROJECTS.map(({ image, title, description, tags, link, github }) => (
            <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
                <div class="w-full md:w-1/2">
                    <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
                        <img
                            alt="Project"
                            class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
                            loading="lazy"
                            src={image}
                        />
                    </div>
                </div>

                <div class="w-full md:w-1/2 md:max-w-lg">
                    <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
                        {title}
                    </h3>
                    <div class="flex flex-wrap mt-2">
                        <ul class="flex flex-row mb-2 gap-x-2">
                            {tags.map((tag) => (
                                <li>
                                    <span
                                        class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                                    >
                                        <tag.icon class="size-4" />
                                        {tag.name}
                                    </span>
                                </li>
                            ))}
                        </ul>

                        <div class="mt-2 text-gray-700 dark:text-gray-400">
                            {description}
                        </div>
                        <footer class="flex items-end justify-start mt-4 gap-x-4">
                            {github && (
                                <LinkButton href={github}>
                                    <GitHub class="size-6" />
                                    Code
                                </LinkButton>
                            )}
                            {link && (
                                <LinkButton href={link}>
                                    <Link class="size-4" />
                                    Preview
                                </LinkButton>
                            )}
                        </footer>
                    </div>
                </div>
            </article>
        ))
    }
</div>
